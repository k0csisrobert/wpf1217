<Window x:Class="wpf1217.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf1217"
        mc:Ignorable="d"
        Title="Bevásárló lista" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="termekDG" ColumnWidth="*"></DataGrid>
        <ScrollViewer Grid.Row="1">
            <GroupBox Header="Termékek" Margin="10">
                <WrapPanel Margin="5">
                    <Button Content="Hozzáadás" Width="150" Margin="5" Click="hozzaadas" />
                </WrapPanel>
            </GroupBox>
        </ScrollViewer>

    </Grid>
</Window>
