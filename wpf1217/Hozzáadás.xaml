<Window x:Class="wpf1217.Hozzáadás"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf1217"
        mc:Ignorable="d"
        Title="Hozzáadás" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Termék:" Margin="20,0,0,0"/>
        <TextBox x:Name="nev" Grid.Row="0" Width="150" Height="20" Text="Margarin" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="1" Content="Mennyiség:" Margin="20,0,0,0"/>
        <TextBox x:Name="mennyiseg" Grid.Row="1" Width="150" Height="20" Text="1" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="2" Content="Ár:" Margin="20,0,0,0"/>
        <TextBox x:Name="ar" Grid.Row="2" Width="150" Height="20" Text="460" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="3" Content="Kategória:" Margin="20,0,0,0"/>
        <ComboBox x:Name="kategoria"  Grid.Row="3" Width="150" Height="20" SelectedIndex="0" HorizontalAlignment="Right" Margin="0,0,20,0">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
        </ComboBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ok" Width="60" Height="25" Margin="10" Click="Button_Click_1"/>
            <Button Content="Mégse" Width="60" Height="25" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
